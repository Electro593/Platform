{
    "configurations": [
        {
            "name": "Win32",
            "includePath": [
                "${workspaceFolder}/src/**",
                "${workspaceFolder}/Platform/src/**"
            ],
            "defines": [
                "_WIN32=1",
                "_GCC=1",
                "_X64=1",
                "_DEBUG=1",
                "_OPENGL=1",
				"_WORD_SIZE=64",
				"INCLUDE_HEADER",
				"INCLUDE_SOURCE",
                "_GAME_MODULE",
                "_PLATFORM_MODULE",
                "_RENDERER_MODULE",
                "_WAYLAND_MODULE"
            ],
            "cStandard": "c23",
            "cppStandard": "c++23",
            "intelliSenseMode": "windows-gcc-x64"
        },
        {
            "name": "Linux",
            "includePath": [
                "${workspaceFolder}/src/**",
                "${workspaceFolder}/Platform/src/**"
            ],
            "defines": [
                "_LINUX=1",
                "_GCC=1",
                "_X64=1",
                "_DEBUG=1",
                "_OPENGL=1",
				"_WORD_SIZE=64",
				"INCLUDE_HEADER",
				"INCLUDE_SOURCE",
                "_GAME_MODULE",
                "_UTIL_MODULE",
                "_PLATFORM_MODULE",
                "_RENDERER_MODULE",
                "_WAYLAND_MODULE"
            ],
            "cStandard": "c23",
            "cppStandard": "c++23",
            "intelliSenseMode": "linux-gcc-x64"
        }
    ],
    "version": 4
}